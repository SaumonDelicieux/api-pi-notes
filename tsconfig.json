{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
}
